@using Presentation.DtoViews.UserDtoViews
@using Microsoft.AspNetCore.Mvc

@model UserEditDtoView
@{
    Layout = ViewData["layot"] as string;
}
<form method="post" action="/user/editing" >
    <input hidden name="Id" type="number" asp-for="@Model.Id" value="@Model.Id" />
    <table>
        <tr>
            <td><label class="lblClass">Логин: </label></td>
        </tr>
        <tr>
            <td><input disabled name="Login" type="text" asp-for="@Model.Login" value="@Model.Login" /></td>
        </tr>
        <tr>
            <td><label class="lblClass">Роль: </label></td>
        </tr>
        <tr>
            <td><input name="Role.RoleName" type="text" asp-for="@Model.Role!.RoleName" value="@Model.Role!.RoleName" /></td>
        </tr>
        <tr>
            <td><label class="lblClass">Почта: </label></td>
        </tr>
        <tr>
            <td><input name="Email" type="text" asp-for="@Model.Email" value="@Model.Email" /></td>
        </tr>
        <tr>
        </tr>
    </table><br />
    <button type="submit">сохранить</button>
</form>