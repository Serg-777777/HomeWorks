@using Presentation.DtoViews.UserDtoViews
@model UserProfileDtoView
@{
    var dtoView = Model;
    Layout="_Master";
}

<div><a href="/profile/edit/@dtoView.UserId">изменить</a> </div>
<br />

<table>
    <tr>
        <td><label>Имя: </label></td>
        <td>@dtoView.FirstName @dtoView.LastName</td>
    </tr>
    <tr>
        <td><label>Возраст: </label></td>
        <td>@dtoView.Age</td>
    </tr>
    <tr>
        <td><label>Город: </label></td>
        <td>@dtoView.City</td>
    </tr>
    <tr>
        <td><label>Страна: </label></td>
        <td>@dtoView.Country</td>
    </tr>
</table>
